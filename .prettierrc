{
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "avoid",
  "singleQuote": true,
  "singleAttributePerLine": true,
  "bracketSpacing": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    "^react",
    "^recoil",
    "<THIRD_PARTY_MODULES>",
    "^./pages",
    "^./components",
    "^./hooks",
    "^./state",
    "^./api",
    "^./utils",
    "^./types",
    "^./style",
    "^./data",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
